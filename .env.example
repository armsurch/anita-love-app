# üîê Environment Variables for Full-Stack Romantic App
# Copy this file to .env and fill in your actual values

# JWT Secrets (Generate strong random strings)
JWT_SECRET=your-super-secret-jwt-key-here
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here

# Database Configuration (if using external database)
DATABASE_URL=your-database-connection-string

# AI Service API Keys (Optional - for real AI integration)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Cloud Storage (Optional - for real cloud storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=your-s3-bucket-name

# Email Service (Optional - for notifications)
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password

# App Configuration
APP_NAME=Anita PA Romantic App
APP_URL=https://your-app-name.netlify.app
ADMIN_EMAIL=your-admin@example.com

# Feature Flags
ENABLE_REAL_AI=false
ENABLE_CLOUD_STORAGE=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_ANALYTICS=true

# Development Settings
NODE_ENV=production
DEBUG=false